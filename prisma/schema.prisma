generator client {
  provider = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(cuid())
  clerkId          String            @unique
  email            String            @unique
  name             String
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  quizResults      QuizResult[]
  roomLeaderboards RoomLeaderboard[]
  createdRooms     Room[]            @relation("RoomCreator")

  @@map("users")
}

model Room {
  id              String            @id @default(cuid())
  code            String            @unique
  name            String
  createdBy       String
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  questionCount   Int               @default(5)
  timePerQuestion Int               @default(10)
  isActive        Boolean           @default(true)
  maxParticipants Int               @default(50)
  creator         User              @relation("RoomCreator", fields: [createdBy], references: [clerkId], onDelete: Cascade)
  sessions        QuizSession[]
  leaderboards    RoomLeaderboard[]
  questions       Question[]

  @@index([createdBy])
  @@index([code])
  @@map("rooms")
}

model Question {
  id        String   @id @default(cuid())
  roomId    String
  text      String
  options   String[]
  answer    String
  createdAt DateTime @default(now())
  order     Int      @default(0)
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
  @@map("questions")
}

model QuizSession {
  id           String       @id @default(cuid())
  roomId       String
  room         Room         @relation(fields: [roomId], references: [id], onDelete: Cascade)
  createdAt    DateTime     @default(now())
  participants String[]     @default([])
  currentIndex Int          @default(0)
  isActive     Boolean      @default(false)
  startedAt    DateTime?
  endedAt      DateTime?
  results      QuizResult[]

  @@index([roomId])
  @@index([isActive])
  @@map("quiz_sessions")
}

model QuizResult {
  id        String      @id @default(cuid())
  userId    String
  sessionId String
  score     Int         @default(0)
  answers   Json        @default("{}")
  createdAt DateTime    @default(now())
  user      User        @relation(fields: [userId], references: [clerkId], onDelete: Cascade)
  session   QuizSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([userId, sessionId])
  @@index([sessionId])
  @@map("quiz_results")
}

model RoomLeaderboard {
  id           String   @id @default(cuid())
  roomId       String
  userId       String
  date         String
  dailyScore   Int      @default(0)
  allTimeScore Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  room         Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user         User     @relation(fields: [userId], references: [clerkId], onDelete: Cascade)

  @@unique([roomId, userId, date])
  @@index([roomId, date])
  @@map("room_leaderboards")
}
